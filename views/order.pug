extends layout

block content
    h3 #{title} Here
    form(id='form', method='post', action='/submitted')
        div(class='input_form')
            p Name: 
                input(type='text' name='name' required)
            p Address: 
                input(type='text' name='address' required)
            p Phone: 
                input(type='text' name='phone' required)
        //- This return nothing or "on"
        each category in serviceCategories.categories
            b
                p(class='drink_type') #{category[0]}
            ul(class='service')
                each service in category[1]
                    li
                        p #{service[0]} - $#{service[3]}
                            input(type='CheckBox' name=service[1])
        p
            input(type='submit', value='Place Order' class='button')